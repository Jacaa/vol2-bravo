= form_for ([@organization, @proposal]), url: { controller: 'proposals', action: 'update'}, method: :put do |f|
  .form-group
    = f.label(:price, t('price'), class: 'col-form-label')
    = f.text_field :price, class: 'form-control'
  .form-group
    = f.label(:expiration_date, t('expiration_date'), class: 'col-form-label')
    = f.text_field :expiration_date, class: 'form-control', type: 'datetime-local'
  .form-group
    = f.label(:quantity, t('quantity'), class: 'col-form-label')
    = f.text_field :quantity, class: 'form-control'
    - if @dishes.present? then
      .form-group
        = f.label(:quantity, t('.your_dishes'), class: 'col-form-label')
        = f.select(:dish_id, @dishes, {}, { class: 'form-control' })
    - else
      %span= t('.no_dishes_yet')
    = f.submit t('.edit'), class: "btn btn-success"

= link_to t('.delete'), organization_proposal_path(params[:organization_id], @proposal), method: :delete, data: { confirm: "You sure?" }

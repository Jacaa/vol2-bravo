= form_for ([@organization, @proposal]), url: { controller: 'proposals', action: 'update'}, method: :put do |f|
  .form-group
    = f.label(:price, "Cena: ", class: 'col-form-label')
    = f.text_field :price, class: 'form-control'
  .form-group
    = f.label(:expiration_date, "Expiration date: ", class: 'col-form-label')
    = f.text_field :expiration_date, class: 'form-control', type: 'datetime-local'
  .form-group
    = f.label(:quantity, "Porcje: ", class: 'col-form-label')
    = f.text_field :quantity, class: 'form-control'
    - if @dishes.present? then
      .form-group
        = f.label(:quantity, "Twoje dania: ", class: 'col-form-label')
        = f.select(:dish_id, @dishes, {}, { class: 'form-control' })
    - else
      %span Nie masz jeszcze żadnych dań
    = f.submit

=link_to "Usuń", organization_proposal_path(params[:organization_id], @proposal), method: :delete, data: { confirm: "You sure?" }

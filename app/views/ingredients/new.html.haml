= form_for @ingredient,  html: {class: ''} do |f|
  .form-group
    = f.label(:name, "Nazwa: ", class: 'col-form-label')
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label(:kind, "Kategoria: ", class: 'col-form-label')
    = f.select(:kind, @ingredient_kinds, {}, { class: 'form-control' })
    = f.submit "Dodaj sk≈Çadnik", class: 'btn btn-success'

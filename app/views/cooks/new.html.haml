.form-container
  %h2 Become a masterchef!
  = form_for(@cook, url: { controller: 'cooks', action: 'create'}, html: { method: 'post' } ) do |f|
    = render 'shared/error_messages', object: f.object
    .field.form-group
      = f.label :speciality
      = f.text_field :speciality, class: 'form-control'
    .field.form-group
      = f.label :work_city
      = f.text_field :work_city, class: 'form-control'
    .field.form-group
      = f.submit "I want to be a masterchef!", class: "btn btn-dark"

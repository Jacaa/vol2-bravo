.container-fluid.p-4
  .row
    .col-md-8
      = render 'organizations/follow_form', object: @organization if current_user
      = render 'organizations/join_form', object: @organization if current_user.cook
    .col-md-4
      %span Profil organizacji:
      %ul.list-group
        %li.list-group-item
          Nazwa organizacji:
          = @organization.name
        %li.list-group-item
          Miasto:
          = @organization.city
        %li.list-group-item
          Opis:
          = @organization.description
          